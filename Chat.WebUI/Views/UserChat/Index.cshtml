@using System.Security.Claims
@model Chat.Core.Entities.ChatSession

@{
    Layout = "_Layout";
    ViewData["Title"] = "الدعم المباشر";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var userName = User.Identity?.Name ?? "مستخدم";
    bool isClosed = ViewBag.IsClosed != null && (bool)ViewBag.IsClosed;
}

<div class="chat-container">
    <!-- شريط الرأس -->
    <div class="chat-header">
        <div class="header-content">
            <div class="user-info">
                <div class="avatar">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="info">
                    <h4 class="mb-0">الدعم الفني</h4>
                    <div class="status">
                        <span class="status-dot" id="statusDot"></span>
                        <small id="connectionStatus">جاري الاتصال...</small>
                    </div>
                </div>
            </div>
            <div class="chat-meta">
                <span class="chat-id">#@Model.Id</span>
                <button id="btnEndChat" class="btn-end-chat" title="إنهاء المحادثة">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <!-- مؤشر الكتابة -->
        <div id="typingIndicator" class="typing-indicator">
            <div class="typing-dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <span class="typing-text"></span>
        </div>
    </div>

    <!-- نافذة المحادثة -->
    <div id="chatBox" class="chat-messages">
        <!-- الرسائل ستظهر هنا -->
        <div class="welcome-message">
            <div class="welcome-icon">
                <i class="fas fa-comments"></i>
            </div>
            <h5>مرحباً بك في الدعم الفني</h5>
            <p>سنقوم بالرد عليك في أقرب وقت ممكن</p>
        </div>
    </div>

    <!-- منطقة الكتابة -->
    <div class="chat-input-area">
        <!-- ملفات تم رفعها مسبقاً -->
        <div id="uploadedFiles" class="uploaded-files-container"></div>

        <div class="input-container">
            <!-- أزرار التحكم -->
            <div class="input-controls">
                <div class="file-buttons">
                    <input type="file" id="fileInput" multiple accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.txt" style="display: none;">
                    <button type="button" id="btnAttachment" class="btn-control" title="إرفاق ملف">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button type="button" id="btnImage" class="btn-control" title="صورة">
                        <i class="fas fa-image"></i>
                    </button>
                    <button type="button" id="btnCamera" class="btn-control" title="كاميرا">
                        <i class="fas fa-camera"></i>
                    </button>
                </div>
                <div class="voice-control">
                    <button type="button" id="btnVoice" class="btn-control voice-btn" title="تسجيل صوتي">
                        <i class="fas fa-microphone"></i>
                    </button>
                </div>
            </div>

            <div class="input-wrapper">
                <textarea id="msgInput"
                          class="message-input"
                          placeholder="اكتب رسالتك هنا..."
                          rows="1"
                          maxlength="500"
                          @(isClosed ? "disabled" : "")></textarea>
                <div class="input-actions">
                    <button id="btnSend" class="btn-send" @(isClosed ? "disabled" : "")>
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
            <div class="input-footer">
                <small id="charCount" class="char-count">0/500</small>
                <small class="hint">اضغط Enter للإرسال، Shift+Enter للسطر الجديد</small>
            </div>
        </div>
    </div>

    <!-- تسجيل الصوت -->
    <div id="voiceRecordModal" class="modal-overlay">
        <div class="modal-content voice-modal">
            <div class="modal-header">
                <h5>تسجيل رسالة صوتية</h5>
                <button type="button" class="btn-close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="voice-recorder">
                    <div class="voice-visualizer" id="voiceVisualizer"></div>
                    <div class="voice-controls">
                        <button id="btnStartRecord" class="btn-record">
                            <i class="fas fa-microphone"></i>
                            <span>بدء التسجيل</span>
                        </button>
                        <button id="btnStopRecord" class="btn-record stop" disabled>
                            <i class="fas fa-stop"></i>
                            <span>إيقاف</span>
                        </button>
                        <button id="btnPlayRecord" class="btn-record play" disabled>
                            <i class="fas fa-play"></i>
                            <span>استماع</span>
                        </button>
                    </div>
                    <div class="voice-timer">
                        <span id="recordTime">00:00</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSendVoice" class="btn-primary" disabled>إرسال</button>
                <button id="btnCancelVoice" class="btn-secondary">إلغاء</button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/userchat/index.css" />

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/views/userchat/index.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initUserChat("@Model.Id", "@userId");
        });
    </script>
}