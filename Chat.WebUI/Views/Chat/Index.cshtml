@model List<Chat.Application.ChatSessionVM>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="admin-dashboard">
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="fw-bold mb-1">
                        <i class="fas fa-headset me-2 text-primary"></i>لوحة تحكم المحادثات
                    </h1>
                    <p class="text-muted mb-0">
                        إدارة محادثات العملاء المباشرة
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <div class="stats-card">
                        <div class="stat-item">
                            <i class="fas fa-users text-primary"></i>
                            <div>
                                <h4 class="mb-0" id="activeUsers">0</h4>
                                <small>عملاء نشطين</small>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-outline-primary btn-refresh" onclick="refreshDashboard()">
                        <i class="fas fa-sync-alt me-2"></i>تحديث
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <!-- Filters -->
                <div class="filters-card mb-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-search me-2 text-muted"></i>بحث
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="searchInput"
                                       placeholder="ابحث بالمستخدم أو الرسالة...">
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-filter me-2 text-muted"></i>حالة المحادثة
                                </label>
                                <select class="form-control" id="statusFilter">
                                    <option value="all">جميع الحالات</option>
                                    <option value="live">نشطة فقط</option>
                                    <option value="closed">مغلقة فقط</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-sort me-2 text-muted"></i>ترتيب حسب
                                </label>
                                <select class="form-control" id="sortFilter">
                                    <option value="newest">الأحدث أولاً</option>
                                    <option value="oldest">الأقدم أولاً</option>
                                    <option value="messages">عدد الرسائل</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-calendar me-2 text-muted"></i>الفترة الزمنية
                                </label>
                                <select class="form-control" id="timeFilter">
                                    <option value="all">جميع الأوقات</option>
                                    <option value="today">اليوم</option>
                                    <option value="week">هذا الأسبوع</option>
                                    <option value="month">هذا الشهر</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stats Overview -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-lg-6 mb-3">
                        <div class="stat-card bg-primary">
                            <div class="stat-content">
                                <div class="stat-icon">
                                    <i class="fas fa-comments"></i>
                                </div>
                                <div>
                                    <h3 class="stat-number" id="totalSessions">@Model.Count</h3>
                                    <p class="stat-label">إجمالي المحادثات</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 mb-3">
                        <div class="stat-card bg-success">
                            <div class="stat-content">
                                <div class="stat-icon">
                                    <i class="fas fa-bolt"></i>
                                </div>
                                <div>
                                    <h3 class="stat-number" id="activeSessions">0</h3>
                                    <p class="stat-label">محادثات نشطة</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 mb-3">
                        <div class="stat-card bg-info">
                            <div class="stat-content">
                                <div class="stat-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <h3 class="stat-number" id="avgResponseTime">0s</h3>
                                    <p class="stat-label">متوسط وقت الرد</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-3 col-lg-6 mb-3">
                        <div class="stat-card bg-warning">
                            <div class="stat-content">
                                <div class="stat-icon">
                                    <i class="fas fa-hourglass-half"></i>
                                </div>
                                <div>
                                    <h3 class="stat-number" id="pendingSessions">0</h3>
                                    <p class="stat-label">في انتظار الرد</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chats Table -->
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-list-alt me-2 text-primary"></i>
                            قائمة المحادثات
                        </h5>
                    </div>

                    <div class="table-container">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr class="table-light">
                                    <th class="ps-4" width="250">
                                        <i class="fas fa-user me-2"></i>المستخدم
                                    </th>
                                     <th width="120" class="text-end pe-4">
                                        <i class="fas fa-cogs me-2"></i>الإجراءات
                                    </th>
                                    <th width="120">
                                        <i class="fas fa-circle me-2"></i>الحالة
                                    </th>
                                    <th width="120">
                                        <i class="fas fa-envelope me-2"></i>الرسائل
                                    </th>
                                    <th width="180">
                                        <i class="fas fa-clock me-2"></i>آخر نشاط
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody id="chatTable">
                                @foreach (var session in Model)
                                {
                                    var timeAgo = GetTimeAgo(session.LastMessageOn);

                                    <tr data-user="@session.UserId"
                                        data-session="@session.Id"
                                        data-status="@(session.IsClosed ? "closed" : "live")"
                                        data-time="@session.LastMessageOn?.ToString("yyyy-MM-dd HH:mm:ss")"
                                        data-messages="@session.MessagesCount">

                                        <!-- User Column -->
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-3">
                                                    @{
                                                        var userInitials = GetUserInitials(session.UserId);
                                                    }
                                                    <span class="avatar-text">@userInitials</span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@GetDisplayName(session.UserId)</h6>
                                                    <small class="text-muted">ID: @session.UserId</small>
                                                </div>
                                            </div>
                                        </td>
                                          <!-- Actions Column -->
                                        <td class="text-end pe-4">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Open"
                                                   asp-route-id="@session.Id"
                                                   class="btn btn-sm btn-primary btn-action"
                                                   title="فتح المحادثة">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>

                                                <button class="btn btn-sm btn-outline-primary btn-action"
                                                        onclick="openHistory('@session.UserId')"
                                                        title="سجل المحادثات">
                                                    <i class="fas fa-history"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <!-- Status Column -->
                                        <td>
                                            @if (session.IsClosed)
                                            {
                                                <span class="status-badge status-closed">
                                                    <i class="fas fa-check-circle me-1"></i>مغلقة
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-live">
                                                    <i class="fas fa-circle me-1"></i>نشطة
                                                </span>
                                            }
                                        </td>

                                        <!-- Messages Column -->
                                        <td>
                                            <div class="messages-count">
                                                <span class="badge bg-light text-dark">
                                                    @session.MessagesCount
                                                </span>
                                                <small class="text-muted">رسالة</small>
                                            </div>
                                        </td>

                                        <!-- Last Activity Column -->
                                        <td>
                                            <div class="last-activity">
                                                <div class="time-ago">@timeAgo</div>
                                                @if (session.LastMessageOn.HasValue)
                                                {
                                                    <small class="text-muted d-block">
                                                        @session.LastMessageOn.Value.ToString("yyyy/MM/dd HH:mm")
                                                    </small>
                                                }
                                            </div>
                                        </td>

                                      
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Empty State -->
                        @if (!Model.Any())
                        {
                            <div class="empty-state text-center py-5">
                                <div class="empty-icon mb-3">
                                    <i class="fas fa-comments fa-3x text-muted"></i>
                                </div>
                                <h5 class="text-muted mb-2">لا توجد محادثات حالياً</h5>
                                <p class="text-muted">سيظهر هنا محادثات العملاء عند بدئهم</p>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    <div class="card-footer bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                عرض <span id="showingCount">@Model.Count</span> من <span id="totalCount">@Model.Count</span> محادثة
                            </div>
                            <nav>
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
