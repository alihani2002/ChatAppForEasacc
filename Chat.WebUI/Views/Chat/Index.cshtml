<!-- Modal: Confirm Close -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    تأكيد الإغلاق
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من رغبتك في إنهاء هذه المحادثة؟</p>
                <p class="text-muted small">لن يتمكن المستخدم من إرسال رسائل جديدة بعد الإغلاق.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-danger" id="confirmCloseBtn">إنهاء المحادثة</button>
            </div>
        </div>
    </div>
@{
    string GetTimeAgo(DateTime? lastMessageTime)
    {
        if (!lastMessageTime.HasValue)
            return "لا يوجد نشاط";

        var timeSpan = DateTime.Now - lastMessageTime.Value;

        if (timeSpan.TotalMinutes < 1)
            return "الآن";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} دقيقة";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} ساعة";

        return $"{(int)timeSpan.TotalDays} يوم";
    }

    string GetUserInitials(string userId)
    {
        if (string.IsNullOrEmpty(userId) || userId.Length < 2)
            return "??";

        return userId.Substring(0, 2).ToUpper();
    }

    string GetDisplayName(string userId)
    {
        if (string.IsNullOrEmpty(userId))
            return "مستخدم";

        if (userId.Contains("@"))
            return userId.Split('@')[0];

        return userId.Length > 15 ? userId.Substring(0, 12) + "..." : userId;
    }
}

