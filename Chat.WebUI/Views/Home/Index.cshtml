@{
    ViewData["Title"] = "نظام الدردشة المباشرة";
}

<div class="container-fluid px-0">
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6 order-lg-1 order-2">
                    <div class="hero-content">
                        <h6 class="hero-subtitle animate-on-scroll" data-animation="fadeInUp">
                            <span class="badge bg-gradient-primary">✨ نظام حديث</span>
                            التواصل الفوري مع فريق الدعم
                        </h6>

                        <h1 class="hero-title animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                            نظام <span class="text-gradient">الدردشة المباشرة</span>
                            للتواصل الفوري الآمن
                        </h1>

                        <p class="hero-description animate-on-scroll" data-animation="fadeInUp" data-delay="0.4">
                            نظام دردشة متكامل ومتطور يربط العملاء بممثلي الدعم بشكل فوري وآمن.
                            تجربة مستخدم استثنائية، دعم فني متاح 24/7، وأدوات متقدمة لإدارة المحادثات.
                        </p>

                        <div class="hero-cta animate-on-scroll" data-animation="fadeInUp" data-delay="0.6">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                @if (User.IsInRole(Chat.Core.AppRoles.Admin))
                                {
                                    <a asp-controller="Chat" asp-action="Index" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                        <i class="fas fa-headset me-2"></i>دخول لوحة التحكم
                                    </a>
                                }
                                else if (User.IsInRole(Chat.Core.AppRoles.User))
                                {
                                    <a asp-controller="UserChat" asp-action="Index" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                        <i class="fas fa-comment-dots me-2"></i>ابدأ محادثة جديدة
                                    </a>
                                }
                            }
                            else
                            {
                                <div class="d-flex flex-wrap gap-3">
                                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                        <i class="fas fa-user-plus me-2"></i>إنشاء حساب جديد
                                    </a>
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg px-5 py-3">
                                        <i class="fas fa-sign-in-alt me-2"></i>تسجيل الدخول
                                    </a>
                                </div>
                            }
                        </div>

                        <div class="hero-stats animate-on-scroll" data-animation="fadeInUp" data-delay="0.8">
                            <div class="row g-4">
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h3 class="stat-number">99.9%</h3>
                                        <p class="stat-label">نسبة التوفر</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h3 class="stat-number">&lt; 3s</h3>
                                        <p class="stat-label">متوسط وقت الرد</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <h3 class="stat-number">10K+</h3>
                                        <p class="stat-label">مستخدم نشط</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 order-lg-2 order-1 mb-5 mb-lg-0">
                    <div class="hero-visual animate-on-scroll" data-animation="zoomIn">
                        <!-- Floating Elements -->
                        <div class="floating-elements">
                            <div class="floating-element element-1"></div>
                            <div class="floating-element element-2"></div>
                            <div class="floating-element element-3"></div>
                            <div class="floating-element element-4"></div>
                        </div>

                        <!-- Chat Preview -->
                        <div class="chat-preview-container">
                            <div class="chat-window">
                                <div class="chat-header">
                                    <div class="chat-header-content">
                                        <div class="avatar status-online">
                                            <img src="https://ui-avatars.com/api/?name=الدعم+الفني&background=4361ee&color=fff" alt="الدعم">
                                        </div>
                                        <div class="chat-info">
                                            <h6>الدعم الفني المباشر</h6>
                                            <small>متصل الآن • يكتب...</small>
                                        </div>
                                    </div>
                                    <div class="chat-actions">
                                        <button class="btn-action">
                                            <i class="fas fa-video"></i>
                                        </button>
                                        <button class="btn-action">
                                            <i class="fas fa-phone"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="chat-body">
                                    <div class="message incoming">
                                        <div class="message-content">
                                            <p>مرحباً! كيف يمكنني مساعدتك اليوم؟</p>
                                            <span class="message-time">2:30 PM</span>
                                        </div>
                                    </div>

                                    <div class="message outgoing">
                                        <div class="message-content">
                                            <p>أحتاج مساعدة في إعداد حسابي الجديد</p>
                                            <span class="message-time">2:31 PM</span>
                                        </div>
                                    </div>

                                    <div class="message incoming">
                                        <div class="message-content">
                                            <p>بالتأكيد! سأوجهك خلال الخطوات</p>
                                            <span class="message-time">2:32 PM</span>
                                        </div>
                                    </div>

                                    <div class="typing-indicator">
                                        <div class="typing-dots">
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                        </div>
                                        <span>الدعم يكتب...</span>
                                    </div>
                                </div>

                                <div class="chat-footer">
                                    <div class="message-input">
                                        <input type="text" placeholder="اكتب رسالتك هنا..." readonly>
                                        <button class="btn-send">
                                            <i class="fas fa-paper-plane"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features-section py-6">
        <div class="container">
            <div class="section-header text-center mb-6">
                <h6 class="section-subtitle animate-on-scroll" data-animation="fadeInUp">لماذا تختار نظامنا؟</h6>
                <h2 class="section-title animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                    مميزات <span class="text-gradient">استثنائية</span>
                </h2>
                <p class="section-description animate-on-scroll" data-animation="fadeInUp" data-delay="0.4">
                    نظام متكامل مصمم بتقنيات حديثة ليوفر أفضل تجربة دردشة
                </p>
            </div>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp">
                        <div class="feature-icon">
                            <i class="fas fa-bolt"></i>
                        </div>
                        <h4 class="feature-title">سرعة فائقة</h4>
                        <p class="feature-description">
                            رسائل فورية بدون تأخير مع تقنية SignalR المتقدمة
                            ودعم للاتصال المباشر في الوقت الحقيقي
                        </p>
                        <div class="feature-badge">جديد</div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h4 class="feature-title">أمان متقدم</h4>
                        <p class="feature-description">
                            تشفير من طرف إلى طرف، مصادقة متعددة العوامل،
                            وحماية كاملة لبيانات المحادثات
                        </p>
                        <div class="feature-badge">مميز</div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.4">
                        <div class="feature-icon">
                            <i class="fas fa-robot"></i>
                        </div>
                        <h4 class="feature-title">مساعد ذكي</h4>
                        <p class="feature-description">
                            مساعد ذكي يعمل بالذكاء الاصطناعي للإجابة التلقائية
                            على الاستفسارات الشائعة
                        </p>
                        <div class="feature-badge">AI</div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h4 class="feature-title">تقارير وتحليلات</h4>
                        <p class="feature-description">
                            لوحة تحكم متقدمة مع تقارير تفصيلية
                            وتحليلات ذكية لأداء المحادثات
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.4">
                        <div class="feature-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <h4 class="feature-title">متعدد المنصات</h4>
                        <p class="feature-description">
                            نظام متوافق مع جميع الأجهزة والمنصات
                            مع تطبيقات خاصة للأجهزة المحمولة
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="feature-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.6">
                        <div class="feature-icon">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <h4 class="feature-title">تكامل سهل</h4>
                        <p class="feature-description">
                            واجهات برمجة سهلة للتكامل مع أنظمتك الحالية
                            ودعم فني متخصص للتطوير
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works-section py-6 bg-light">
        <div class="container">
            <div class="section-header text-center mb-6">
                <h6 class="section-subtitle animate-on-scroll" data-animation="fadeInUp">كيف يعمل النظام؟</h6>
                <h2 class="section-title animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                    خطوات <span class="text-gradient">سهلة</span> للبدء
                </h2>
            </div>

            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="step-card animate-on-scroll" data-animation="fadeInUp">
                        <div class="step-number">01</div>
                        <div class="step-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <h4 class="step-title">إنشاء حساب</h4>
                        <p class="step-description">
                            سجل في النظام خلال دقائق
                            باستخدام بريدك الإلكتروني
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="step-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.2">
                        <div class="step-number">02</div>
                        <div class="step-icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <h4 class="step-title">تسجيل الدخول</h4>
                        <p class="step-description">
                            ادخل إلى حسابك باستخدام
                            بيانات الاعتماد الخاصة بك
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="step-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.4">
                        <div class="step-number">03</div>
                        <div class="step-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <h4 class="step-title">ابدأ المحادثة</h4>
                        <p class="step-description">
                            اختر قسم الدعم المناسب
                            وابدأ محادثة جديدة
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="step-card animate-on-scroll" data-animation="fadeInUp" data-delay="0.6">
                        <div class="step-number">04</div>
                        <div class="step-icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h4 class="step-title">احصل على الدعم</h4>
                        <p class="step-description">
                            تواصل مع ممثل الدعم
                            واحصل على المساعدة الفورية
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br />
    <br />
    <br />
    <!-- CTA Section -->
    <section class="cta-section py-6">
        <div class="container">
            <div class="cta-card animate-on-scroll" data-animation="fadeInUp">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h2 class="cta-title">جاهز للبدء مع نظام الدردشة المتطور؟</h2>
                        <p class="cta-description">
                            انضم إلى آلاف المؤسسات التي تستخدم نظامنا للتواصل الفعال مع عملائها
                        </p>
                    </div>
                    <div class="col-lg-4 text-lg-end text-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole(Chat.Core.AppRoles.Admin))
                            {
                                <a asp-controller="Chat" asp-action="Index" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                    <i class="fas fa-headset me-2"></i>لوحة التحكم
                                </a>
                            }
                            else if (User.IsInRole(Chat.Core.AppRoles.User))
                            {
                                <a asp-controller="UserChat" asp-action="Index" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                    <i class="fas fa-comment-dots me-2"></i>ابدأ محادثة
                                </a>
                            }
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-gradient-primary btn-lg px-5 py-3">
                                <i class="fas fa-user-plus me-2"></i>إنشاء حساب مجاني
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
