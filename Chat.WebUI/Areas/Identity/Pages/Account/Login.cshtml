@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "_Layout";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">
                    <!-- جانب الصورة -->
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="login-side h-100 position-relative">
                            <div class="login-overlay"></div>
                            <div class="position-absolute top-0 start-0 w-100 h-100 p-5 text-white">
                                <div class="h-100 d-flex flex-column justify-content-center">
                                    <h2 class="display-5 fw-bold mb-4">مرحباً بعودتك!</h2>
                                    <p class="lead mb-4">
                                        سجل الدخول للوصول إلى نظام الدردشة المباشرة والاستفادة من جميع المميزات
                                    </p>
                                    <div class="features-list">
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="fas fa-check-circle fa-lg me-3"></i>
                                            <span>دعم فني على مدار الساعة</span>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="fas fa-check-circle fa-lg me-3"></i>
                                            <span>تشفير كامل للمحادثات</span>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="fas fa-check-circle fa-lg me-3"></i>
                                            <span>سرعة فائقة في الرد</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- جانب النموذج -->
                    <div class="col-lg-6">
                        <div class="card-body p-5">
                            <div class="text-center mb-5">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                    <h3 class="fw-bold text-primary mb-2">
                                        <i class="fas fa-comments me-2"></i>نظام الدردشة
                                    </h3>
                                </a>
                                <p class="text-muted">سجل الدخول إلى حسابك</p>
                            </div>

                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <!-- حقل البريد الإلكتروني -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.Email" class="form-label fw-bold">
                                        <i class="fas fa-envelope me-2 text-primary"></i>البريد الإلكتروني
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-user text-muted"></i>
                                        </span>
                                        <input asp-for="Input.Email" class="form-control border-start-0"
                                               autocomplete="username" aria-required="true"
                                               placeholder="example@email.com" />
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <!-- حقل كلمة المرور -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.Password" class="form-label fw-bold">
                                        <i class="fas fa-lock me-2 text-primary"></i>كلمة المرور
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-key text-muted"></i>
                                        </span>
                                        <input asp-for="Input.Password" class="form-control border-start-0"
                                               autocomplete="current-password" aria-required="true"
                                               placeholder="أدخل كلمة المرور" />
                                        <button type="button" class="btn btn-outline-secondary toggle-password"
                                                data-target="Input_Password">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <!-- تذكرني -->
                                <div class="form-check mb-4">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        تذكر بيانات الدخول
                                    </label>
                                </div>

                                <!-- زر تسجيل الدخول -->
                                <div class="d-grid gap-2">
                                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-sign-in-alt me-2"></i>تسجيل الدخول
                                    </button>
                                </div>

                                <!-- الروابط المساعدة -->
                                <div class="text-center mt-4">
                                    <div class="d-flex flex-wrap justify-content-center gap-3">
                                    @*     <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                            <i class="fas fa-question-circle me-1"></i>نسيت كلمة المرور؟
                                        </a> *@
                                        <span class="text-muted">|</span>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                            <i class="fas fa-user-plus me-1"></i>إنشاء حساب جديد
                                        </a>
                                    </div>
                                </div>

                             


                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- إحصائيات صغيرة -->
            <div class="row mt-4">
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-primary bg-opacity-10 rounded-3">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-2x text-primary mb-2"></i>
                            <h6 class="fw-bold mb-1">أمان تام</h6>
                            <p class="text-muted small mb-0">تشفير متقدم للبيانات</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-success bg-opacity-10 rounded-3">
                        <div class="card-body text-center">
                            <i class="fas fa-bolt fa-2x text-success mb-2"></i>
                            <h6 class="fw-bold mb-1">سرعة فائقة</h6>
                            <p class="text-muted small mb-0">ردود فورية للمستخدمين</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card border-0 bg-info bg-opacity-10 rounded-3">
                        <div class="card-body text-center">
                            <i class="fas fa-headset fa-2x text-info mb-2"></i>
                            <h6 class="fw-bold mb-1">دعم 24/7</h6>
                            <p class="text-muted small mb-0">متاح على مدار الساعة</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/views/identity/account/login.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/views/identity/account/login.js"></script>
}